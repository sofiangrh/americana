style "scrollbar"
{
    GtkRange::trough_border = 0
    GtkRange::slider_width = 15
    GtkRange::stepper_size = 15
    GtkScrollbar::min_slider_length = 40

	engine "pixmap" 
	{
		# Horizontal slider background
		image 
		{
            function        	= BOX
            recolorable     	= TRUE
            detail          	= "trough"
            file            	= "Scrollbars/trough-scrollbar-horiz.png"
